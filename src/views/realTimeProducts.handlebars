<div id="container-products" class="container mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6 w-full">
    {{#if list.length}}
        {{#each list}}
            <div class="tile bg-white max-w-sm rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                <img class="w-full h-48 object-cover" src="{{imageUrl}}" alt="{{title}}" />
                <div class="px-6 py-4">
                    <h3 class="font-bold text-xl text-gray-900 mb-2">{{title}}</h3>
                    <p class="text-gray-600 text-base">
                        {{description}}
                    </p>
                </div>
                <div class="px-6 pt-4 pb-2">
                    <span class="inline-block bg-gray-200 rounded-full px-4 py-2 text-lg font-semibold text-gray-800">
                        ${{price}}
                    </span>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="text-center text-gray-600">
            No products available.
        </div>
    {{/if}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
